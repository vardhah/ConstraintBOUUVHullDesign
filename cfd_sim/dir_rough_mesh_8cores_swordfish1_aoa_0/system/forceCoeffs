forceCoeffs_cl
{
    type                forceCoeffs;
    libs            ( "libforces.so" );
	writeControl    timeStep;

	writeInterval   100;

    patches             ( "airfoil.*" );

	// Optional entries

    // Field names
    p               p;
    U               U;
    rho             rhoInf;

    // Reference pressure [Pa]
    //pRef            0;

    // Include porosity effects?
    porosity        no;

    // Store and write volume field representations of forces and moments
    writeFields     yes;

    // Centre of rotation for moment calculations
    CofR            (0 0 0);

    // Freestream velocity magnitude [m/s]
    magUInf         1;

	rhoInf			1027.0;

    liftDir             (0 1 0);
    dragDir             (1 0 0);
    CofR                (0 0 0);
    pitchAxis           (0 0 1);

    lRef                3.7190003;
    Aref                3.511604097882071;
}


forceCoeffs_cd
{
    type                forceCoeffs;
    libs            ( "libforces.so" );
	writeControl    timeStep;

	writeInterval   100;

    patches             ( "airfoil.*" );

	// Optional entries

    // Field names
    p               p;
    U               U;
    rho             rhoInf;

    // Reference pressure [Pa]
    //pRef            0;

    // Include porosity effects?
    porosity        no;

    // Store and write volume field representations of forces and moments
    writeFields     no;

    // Centre of rotation for moment calculations
    CofR            (0 0 0);

    // Freestream velocity magnitude [m/s]
    magUInf         1;

	rhoInf			1027.0;

    liftDir             (0 1 0);
    dragDir             (1 0 0);
    CofR                (0 0 0);
    pitchAxis           (0 0 1);

    lRef                3.7190003;
    Aref                0.8266634690579997;
}
// ************************************************************************* //

force_computation
{
    // Mandatory entries
    type            forces;
    libs            ("libforces.so");
    patches          ( "airfoil.*" );
    writeControl    timeStep;
    writeInterval   100;


    // Optional entries

    // Field names
    p               p;
    U               U;
    rho             rho;

    // Store and write volume field representations of forces and moments
    rho          rhoInf;
    rhoInf       1027.0;

    // Centre of rotation for moment calculations
    CofR            (0 0 0);
};
